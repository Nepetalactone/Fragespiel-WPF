        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fragespiel" Height="600" Width="800" WindowState="Maximized">
    <Grid>
        <Button Content="Spielen" HorizontalAlignment="Center" Margin="0,0,0,225" VerticalAlignment="Center" Width="400" Height="100" Click="PlayButton_Click" FontSize="48"/>
